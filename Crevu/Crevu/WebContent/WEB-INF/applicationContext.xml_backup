	           <prop key="hibernate.hbm2ddl.auto">update</prop>
<!-- 	           <prop key="hibernate.session_factory_name">jndi/crevuSessionFactory</prop> -->
	        </props>
        </property>
        <property name="dataSource"><ref bean="crevu_ds"></ref></property>
	</bean>
